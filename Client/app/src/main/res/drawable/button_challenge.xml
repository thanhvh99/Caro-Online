<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/button_radius"/>
                    <solid android:color="@color/color_asbestos"/>
                </shape>
            </item>

            <item android:bottom="@dimen/button_shadow">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/button_radius"/>
                    <solid android:color="@color/color_concrete"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true" android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/button_radius"/>
                    <solid android:color="@color/color_belize_hole"/>
                </shape>
            </item>

            <item android:bottom="@dimen/button_shadow">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/button_radius"/>
                    <solid android:color="@color/color_peter_river"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item android:top="@dimen/button_shadow">
                <shape android:shape="rectangle">
                    <padding android:top="@dimen/button_shadow" />
                    <corners android:radius="@dimen/button_radius"/>
                    <solid android:color="@color/color_peter_river"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>